<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ShoesActivity">

    <Spinner
        android:id="@+id/spinner1"
        android:layout_width="38dp"
        android:layout_height="23dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="31dp"
        android:layout_marginTop="290dp"
        android:spinnerMode="dropdown" />

    <Button
        android:id="@+id/btnBoots"
        style="@style/Widget.AppCompat.Button.ButtonBar.AlertDialog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/imageView"
        android:layout_alignLeft="@+id/imageView"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="-218dp"
        android:layout_marginLeft="-218dp"
        android:layout_marginBottom="298dp"
        android:text="Add to cart"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="142dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/imageView"
        android:layout_alignParentTop="true"
        android:layout_marginStart="-206dp"
        android:layout_marginTop="265dp"
        android:layout_marginBottom="265dp"
        android:text="Price: 799.99"
        android:textColor="#000000"
        android:textSize="14sp"
        android:layout_alignLeft="@+id/imageView"
        android:layout_marginLeft="-206dp" />

    <TextView
        android:id="@+id/Boots"
        android:layout_width="142dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/imageView"
        android:layout_alignParentTop="true"
        android:layout_marginStart="-206dp"
        android:layout_marginTop="240dp"
        android:text="Boots"
        android:textColor="#000000"
        android:textSize="14sp"
        android:layout_alignLeft="@+id/imageView"
        android:layout_marginLeft="-206dp" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="142dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/imageView"
        android:layout_alignParentTop="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="265dp"
        android:text="Price: 399.99"
        android:textColor="#000000"
        android:layout_marginBottom="265dp"
        android:textSize="14sp"
        android:layout_alignLeft="@+id/imageView"
        android:layout_marginLeft="16dp" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="121dp"
        android:layout_height="63dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="9dp"
        android:layout_marginLeft="9dp"
        android:layout_marginTop="14dp"
        android:text="Shoes"
        android:textColor="@color/colorAccent"
        android:textSize="36sp"
        android:textStyle="bold"
        app:fontFamily="cursive" />

    <Button
        android:id="@+id/btnBack"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="234dp"
        android:layout_marginLeft="234dp"
        android:layout_marginBottom="25dp"
        android:text="Back to cart"
        android:textSize="14sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="112dp"
        android:layout_height="92dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="237dp"
        android:layout_marginLeft="237dp"
        android:layout_marginTop="101dp"
        app:srcCompat="@drawable/adidas1" />

    <TextView
        android:id="@+id/adidas"
        android:layout_width="142dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/imageView"
        android:layout_alignParentTop="true"
        android:layout_marginStart="18dp"
        android:layout_marginTop="239dp"
        android:text="Adidas Gazelle"
        android:textColor="#000000"
        android:textSize="14sp"
        android:layout_alignLeft="@+id/imageView"
        android:layout_marginLeft="18dp" />

    <Button
        android:id="@+id/btnAdidas"
        style="@style/Widget.AppCompat.Button.ButtonBar.AlertDialog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/imageView"
        android:layout_alignLeft="@+id/imageView"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="3dp"
        android:layout_marginLeft="3dp"
        android:layout_marginBottom="300dp"
        android:text="Add to cart"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="109dp"
        android:layout_height="90dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="23dp"
        android:layout_marginLeft="23dp"
        android:layout_marginTop="102dp"
        app:srcCompat="@drawable/boots" />

    <TextView
        android:id="@+id/textView14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/spinner1"
        android:layout_alignParentStart="true"
        android:layout_marginStart="82dp"
        android:layout_marginBottom="3dp"
        android:text="size: "
        android:textColor="#000000" />

    <Spinner
        android:id="@+id/spinner2"
        android:layout_width="36dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/spinner1"
        android:layout_alignParentStart="true"
        android:layout_marginStart="253dp"
        android:layout_marginTop="-3dp" />

    <TextView
        android:id="@+id/textView16"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/adidas"
        android:layout_alignTop="@+id/textView14"
        android:layout_marginStart="41dp"
        android:layout_marginTop="5dp"
        android:text="size:"
        android:textColor="#000000" />

</RelativeLayout>